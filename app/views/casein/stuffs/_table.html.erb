<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Title", :title %></th>
			<th><%= casein_sort_link "Caption", :caption %></th>
			<th><%= casein_sort_link "Url", :url %></th>
			<th><%= casein_sort_link "Image", :image %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% stuffs.each do |stuff| %>
		<tr>
			<td><%= casein_table_cell_link stuff.title, casein_stuff_path(stuff) %></td>
			<td><%= casein_table_cell_link stuff.caption, casein_stuff_path(stuff) %></td>
			<td><%= casein_table_cell_link stuff.url, casein_stuff_path(stuff) %></td>
			<td><%= casein_table_cell_link stuff.image, casein_stuff_path(stuff) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_stuff_path(stuff), :method => :delete, :data => { :confirm => "Are you sure you want to delete this stuff?" }) %>
			</td>
		</tr>
	<% end %>
</table>