<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Title", :title %></th>
			<th><%= casein_sort_link "Caption", :caption %></th>
			<th><%= casein_sort_link "Url", :url %></th>
			<th><%= casein_sort_link "Image", :image %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% media.each do |media| %>
		<tr>
			<td><%= casein_table_cell_link media.title, casein_media_path(media) %></td>
			<td><%= casein_table_cell_link media.caption, casein_media_path(media) %></td>
			<td><%= casein_table_cell_link media.url, casein_media_path(media) %></td>
			<td><%= casein_table_cell_link media.image, casein_media_path(media) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_media_path(media), :method => :delete, :data => { :confirm => "Are you sure you want to delete this media?" }) %>
			</td>
		</tr>
	<% end %>
</table>