  <body>
    <div class="spacer"></div>

    <div class="mediaContainer pure-g">
      <% @item.each_with_index do |item, i| %>
        <%= content_tag(:div, class: "modal", id: "openModal-#{i}") do %>
          <div class="modal-container">
            <div class="iconHolder">
              <a href="#modal-close">
                <%= render_svg("x-icon.svg")%>
              </a>
            </div>
            <div class="pure-g">
              <div class="pure-u-2-24 sidePiece"></div>
              <div class="centrPeice pure-u-20-24">
                <div class="pure-g">
                  <div class="embed-container">
                    <%= embedVideo(item.url) %>
                  </div>
                  <h3 class="modal-Title">
                    <%= item.title %>
                  </h3>
                  <p class="modal-Desc">
                    <%= item.description %>
                  </p>
                </div>

              </div>
              <div class="pure-u-2-24 sidePiece"></div>

            </div>
          </div>
        <% end %>
      <% end %>
      <% @item.each_with_index do |item, i| %>
        <div class="mediaGrid pure-u-1-1 pure-u-sm-1-2 pure-u-md-1-3 pure-u-xl-4">
          <%= link_to("#openModal-#{i}") do %>
            <!-- <img src="http://www.superherohype.com/assets/uploads/2015/08/star-wars-mobile-game-header.jpg" class="pure-img" id="commercialPic" alt=""/> -->
            <%= image_tag(item.image.url, :class => "pure-img", :id => "commercialPic") %>
            <h3 class="commercialTitle">
              <%= item.title %>
            </h3>
          <% end %>
        </div>
      <% end %>
    </div>


